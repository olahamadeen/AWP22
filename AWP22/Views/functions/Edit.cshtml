                @Html.EditorFor(model => model.function_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.function_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.function_icon, htmlAttributes: new { @class = "control-label col-md-2" })
